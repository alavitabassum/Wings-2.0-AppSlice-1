<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/courier_came_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:text="Courier Name: "
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/courier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/courier_came_title"
            android:layout_toEndOf="@+id/courier_came_title"
            android:autofillHints=""
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/courier_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courier_came_title"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:text="Courier Time:"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/courier_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/courier_time_title"
            android:layout_toEndOf="@+id/courier_time_title"
            android:autofillHints=""
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/courier_by_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courier_time"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:text="Courier By: "
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/courier_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/courier_by_title"
            android:layout_toEndOf="@+id/courier_by_title"
            android:textSize="14sp"
            android:textStyle="bold" />


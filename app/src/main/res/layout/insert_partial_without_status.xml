        <TextView
            android:id="@+id/CashCollection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:padding="7dp"
            android:text="Partial Collection(COD)"
            android:textAlignment="textStart"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deliveredQuantitytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="66dp"
            android:padding="5dp"
            android:text="Delivered qty"
            android:textAlignment="textStart"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/deliveredQuantity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/deliveredQuantitytext"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/deliveredQuantitytext"
            android:autofillHints=""
            android:ems="10"
            android:inputType="number"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/returnedQuantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="96dp"
            android:padding="5dp"
            android:text="Returned Qty"
            android:textAlignment="textStart"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/returnedQuantity"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/returnedQuantityText"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/returnedQuantityText"
            android:autofillHints=""
            android:ems="10"
            android:inputType="number"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewCollection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="128dp"
            android:padding="5dp"
            android:text="Collection"
            android:textAlignment="textStart"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextPartialCollection"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewCollection"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/textViewCollection"
            android:autofillHints=""
            android:ems="10"
            android:inputType="number"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/remarksTextPartial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="157dp"
            android:padding="5dp"
            android:text="Remarks"
            android:textAlignment="textStart"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/remarks_partial"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/remarksTextPartial"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/remarksTextPartial"
            android:autofillHints=""
            android:ems="10"
            android:inputType="text"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="132dp"
            android:textColor="@color/red"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
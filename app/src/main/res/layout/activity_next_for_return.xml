<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.paperflywings.user.paperflyv0.DeliveryApp.DeliverySupervisor.BankFragmentContent.BankDepositBySupervisor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:text="Please select orders first"
        android:textStyle="bold|italic"
        android:textColor="#000"
        android:id="@+id/tv"/>

    <Spinner
        android:id="@+id/employee_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/select_emp_name"
        android:layout_toEndOf="@+id/select_emp_name"/>

    <!-- <TextView
         android:id="@+id/select_emp_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="10dp"
         android:layout_below="@id/select_deposite_date1"
         android:text="Employee"
         android:textAlignment="textStart"
         android:textSize="15sp"
         android:textStyle="bold" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:text="Employee"
        android:layout_below="@+id/tv"
        android:textStyle="bold"
        android:id="@+id/select_emp_name"/>

    <TextView
        android:id="@+id/error_msg_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_emp_name"
        android:textSize="16sp"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/red"
        android:layout_centerHorizontal="true"
       />


</RelativeLayout>
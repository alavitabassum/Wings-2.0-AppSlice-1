<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view_assign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_delivery_sup_bank_report_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    card_view_assign:cardBackgroundColor="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/date_reports"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:lines="1"
            android:maxLines="1"
            android:text="2019-20-10 20:21:00"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/batch_num_report"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/date_reports"
            android:layout_toEndOf="@+id/date_reports"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="6dp"
            android:text="202"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/invoice_no_reports"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/batch_num_report"
            android:layout_toEndOf="@+id/batch_num_report"
            android:lines="1"
            android:maxLines="1"
            android:text="182013-002"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/amount_paid"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/invoice_no_reports"
            android:layout_toEndOf="@+id/invoice_no_reports"
            android:lines="1"
            android:maxLines="1"
            android:text="1000 taka"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/amount_cash"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/amount_paid"
            android:layout_toEndOf="@+id/amount_paid"
            android:lines="1"
            android:maxLines="1"
            android:text="1000 taka"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="12sp"
            />
      <!--  <TextView
            android:id="@+id/imageView_reports"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/amount_cash"
            android:layout_toEndOf="@+id/amount_cash"
            android:lines="1"
            android:maxLines="1"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="12sp"
            />-->
        <TextView
            android:id="@+id/accept_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/amount_cash"
            android:layout_toEndOf="@+id/amount_cash"
            android:lines="1"
            android:maxLines="1"
            android:text="Yes"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="12sp"
            />
       <!-- <CheckBox
            android:id="@+id/checkCts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />-->
    </RelativeLayout>

</android.support.v7.widget.CardView>
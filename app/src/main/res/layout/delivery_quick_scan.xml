<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/ordertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:lines="1"
            android:maxLines="1"
            android:text="Order ID: "
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderId"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ordertxt"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="6dp"
            android:layout_toEndOf="@+id/ordertxt"
            android:lines="1"
            android:maxLines="1"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/merchant_ref_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="40dp"
            android:text="Merchant Referance: "
            android:maxLines="1"
            android:lines="1"
            android:textColor="#000"
            android:textStyle="bold"

            android:textSize="13sp" />

        <TextView
            android:id="@+id/m_order_ref"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/merchant_ref_txt"
            android:layout_alignEnd="@+id/divider"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/merchant_ref_txt"
            android:lines="1"
            android:maxLines="1"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="13sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="65dp"
            android:background="?android:attr/listDivider" />


        <TextView
            android:id="@+id/m_name"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="0dp"
            android:textAlignment="textStart"
            android:layout_marginStart="0dp"
            android:textColor="#000"
            android:text="Merchant:"
            android:textSize="13sp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="120dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="138dp"
            android:layout_marginEnd="4dp"
            android:padding="3dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/customer_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="170dp"
            android:padding="3dp"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:textSize="14sp" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="250dp"
            android:background="?android:attr/listDivider" />


        <TextView
            android:id="@+id/price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="250dp"
            android:text="Package Price: "
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/price_txt"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="4dp"
            android:layout_toEndOf="@+id/price_txt"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/package_brief"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="275dp"
            android:layout_marginEnd="6dp"
            android:lines="4"
            android:maxLines="4"
            android:text="package brief"
            android:textColor="#000"
            android:textAlignment="textStart"
            android:textSize="17sp" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="365dp"
            android:background="?android:attr/listDivider" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
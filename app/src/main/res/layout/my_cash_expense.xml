<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view_assign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_delivery_expense"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    card_view_assign:cardBackgroundColor="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/expenseDate"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:lines="2"
            android:maxLines="2"
            android:textColor="#000"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/expensePurpose"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/expenseDate"
            android:layout_toEndOf="@+id/expenseDate"
            android:lines="2"
            android:maxLines="2"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="14sp"
            />
        <!--<View style="@style/Divider.Vertical"/>-->

        <TextView
            android:id="@+id/rcvAmt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/expensePurpose"
            android:layout_toEndOf="@+id/expensePurpose"
            android:lines="2"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="14sp"
            />


        <TextView
            android:id="@+id/expense"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/rcvAmt"
            android:layout_toEndOf="@+id/rcvAmt"
            android:paddingLeft="10dp"
            android:lines="2"
            android:maxLines="2"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/expenseComment"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/expense"
            android:layout_toEndOf="@+id/expense"
            android:paddingLeft="10dp"
            android:lines="2"
            android:maxLines="2"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="14sp"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view_assign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_delivery_returnr_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    card_view_assign:cardBackgroundColor="#fff"
    card_view_assign:cardElevation="3dp"
    card_view_assign:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/orderId_Rts"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:lines="1"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/m_order_ref_Rts"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/orderId_Rts"
            android:layout_toEndOf="@+id/orderId_Rts"
            android:lines="1"
            android:maxLines="1"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/price_Rts"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/m_order_ref_Rts"
            android:layout_toEndOf="@+id/m_order_ref_Rts"
            android:paddingLeft="10dp"
            android:lines="1"
            android:maxLines="1"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/return_reasons_Rts"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/price_Rts"
            android:layout_toEndOf="@+id/price_Rts"
            android:paddingLeft="10dp"
            android:lines="2"
            android:maxLines="2"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="14sp"
            />


        <CheckBox
            android:id="@+id/cbRT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>
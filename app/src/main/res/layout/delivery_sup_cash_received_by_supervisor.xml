<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view_assign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_delivery_cash_received_by_supervisor"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:layout_margin="5dp"
    android:foreground="?selectableItemBackground"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    card_view_assign:cardBackgroundColor="#fff"
    card_view_assign:cardElevation="3dp"
    card_view_assign:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/TotalOrder_id"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="#000"
            android:textStyle="bold"
            android:lines="1"
            android:maxLines="1"
            android:text="Total Orders"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/TotalOrder_text"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TotalOrder_id"
            android:layout_toEndOf="@+id/TotalOrder_id"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="30dp"
            android:textAlignment="textStart"
            android:textColor="#1E88E5"
            android:textSize="15sp"
            style="@style/boldStyle"
            />

        <TextView
            android:id="@+id/delivery_officer_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:lines="1"
            android:maxLines="1"
            android:text="Delivery Officer"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/delivery_officer_name_text"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/delivery_officer_name_id"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/delivery_officer_name_id"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginStart="20dp"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="15sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="70dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/total_cash_amount"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:lines="1"
            android:maxLines="1"
            android:textAlignment="textStart"
            android:textColor="#1E88E5"
            android:textSize="15sp"
            style="@style/boldStyle"
            />

        <TextView
            android:id="@+id/submitted_cash_amount"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/total_cash_amount"
            android:layout_toEndOf="@+id/total_cash_amount"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="30dp"
            android:textAlignment="textStart"
            android:textColor="#1E88E5"
            android:textSize="15sp"
            style="@style/boldStyle"
            />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="110dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/receive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:lines="1"
            android:maxLines="1"
            android:text="Time"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/receive_time_text"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/receive_time"
            android:layout_toEndOf="@+id/receive_time"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="30dp"
            android:textAlignment="textStart"
            android:textColor="#1E88E5"
            android:textSize="15sp"
            style="@style/boldStyle"
            />

        <TextView
            android:id="@+id/comment_by_supervisor"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:lines="2"
            android:maxLines="2"
            android:textAlignment="textStart"
            android:textColor="#5E35B1"
            android:textSize="18sp"
            android:textStyle="italic|bold"
            />

        <Button
            android:id="@+id/cash_receive_sup"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_below="@+id/price_txt"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="215dp"
            android:background="@drawable/buttonstyle_done"
            android:padding="10dp"
            android:text="Receive"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
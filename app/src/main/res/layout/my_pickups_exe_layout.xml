<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view_assign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_pu_list"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="5dp"
    android:foreground="?selectableItemBackground"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    card_view_assign:cardBackgroundColor="#fff"
    card_view_assign:cardElevation="3dp"
    card_view_assign:contentPadding="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <TextView
            android:id="@+id/m_name_pul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:maxLines="2"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/m_add_pul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:lines="2"
            android:maxLines="2"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_status"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:text="Status: "
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="95dp"
            android:text="Assigned Qty:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="121dp"
            android:layout_height="21dp"
            android:layout_alignEnd="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:text="Picked Qty:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="46dp"
            android:text="Scan Count:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/a_qty_pul"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-115dp"
            android:layout_marginEnd="60dp"
            android:text=""
            android:textAlignment="textStart"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/p_qty_pul"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView9"
            android:layout_alignEnd="@+id/a_qty_pul"
            android:layout_marginBottom="4dp"
            android:text=""
            android:textAlignment="textStart"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/scan_qty_pul"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/a_qty_pul"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="46dp"
            android:text=""
            android:textAlignment="textStart"
            android:textSize="15sp" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="140dp"
            android:background="?android:attr/listDivider" />

        <View
            android:id="@+id/divider5"
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_above="@+id/btn_scan"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="-39dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m_add_pul"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginStart="11dp"
            android:layout_marginTop="0dp"
            android:text="Call:"
            android:textColor="#000" />

        <TextView
            android:id="@+id/m_phn_num"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m_add_pul"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="18dp"
            android:textAlignment="textStart"
            android:textColor="@color/blue_link"
            android:textSize="15sp"/>
            <!--android:onClick="callMerchant"-->

        <Button
            android:id="@+id/btn_status"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_above="@+id/divider4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/btnleftmargin"
            android:layout_marginBottom="-137dp"
            android:background="@drawable/buttonstyle"
            android:onClick="changeStatus"
            android:padding="10dp"
            android:text="Pending"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="115dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="1dp"
            android:background="@drawable/buttonstyle_scan"
            android:text="SCAN"
            android:textColor="@color/white"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>
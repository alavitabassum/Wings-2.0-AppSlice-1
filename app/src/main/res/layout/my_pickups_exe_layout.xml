<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view_assign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_pu_list"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="5dp"
    android:foreground="?selectableItemBackground"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    card_view_assign:cardBackgroundColor="#fff"
    card_view_assign:cardElevation="3dp"
    card_view_assign:contentPadding="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <TextView
            android:id="@+id/m_name_pul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:maxLines="2"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/m_add_pul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:lines="2"
            android:maxLines="2"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/txt_status_pul"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="70dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="PENDING"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_status_pul"
            android:layout_marginStart="60dp"
            android:layout_marginTop="0dp"
            android:text="Status: "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="105dp"
            android:text="Assigned Qty:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="121dp"
            android:layout_height="21dp"
            android:layout_alignEnd="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="75dp"
            android:text="Picked Qty:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="44dp"
            android:text="Scan Count"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/a_qty_pul"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-125dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="300dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/p_qty_pul"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView9"
            android:layout_alignEnd="@+id/a_qty_pul"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/scan_qty_pul"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/a_qty_pul"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_btn_scan"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:background="#009933"
            android:padding="5dp"
            android:text="SCAN"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="120dp"
            android:background="?android:attr/listDivider" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/txt_btn_scan"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="3dp"
            android:background="?android:attr/listDivider" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
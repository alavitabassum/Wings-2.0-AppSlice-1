<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view_assign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_delivery_cashrs_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    card_view_assign:cardBackgroundColor="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/orderid"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:lines="1"
            android:maxLines="1"
            android:text="200719-2010-A1-B2"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cashBy"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/orderid"
            android:layout_toEndOf="@+id/orderid"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="6dp"
            android:text="rasel64"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/cashTime"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cashBy"
            android:layout_toEndOf="@+id/cashBy"
            android:lines="1"
            android:maxLines="1"
            android:text="2019-20-10 20:21:00"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cashTime"
            android:layout_toEndOf="@+id/cashTime"
            android:lines="1"
            android:maxLines="1"
            android:text="1000 taka"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/collection"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/price"
            android:layout_toEndOf="@+id/price"
            android:lines="1"
            android:maxLines="1"
            android:text="1000 taka"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="12sp"
            />
        <CheckBox
            android:id="@+id/checkCts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>
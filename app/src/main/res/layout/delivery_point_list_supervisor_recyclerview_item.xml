<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view_assign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_delivery_point_codes"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="15dp"
    android:layout_gravity="center"
    android:foreground="?selectableItemBackground"
    card_view_assign:cardBackgroundColor="#fff">

    <RelativeLayout
        android:id="@+id/pointcode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/buttonstyle_updatelist"
        android:padding="10dp">
        <TextView
            android:id="@+id/pointCodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="A1"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
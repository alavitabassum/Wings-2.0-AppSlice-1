<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_grey"
    >

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8"
        android:background="@color/light_grey"
        android:padding="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/add_new_expense"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp">
                <RelativeLayout
                    android:id="@+id/courier_receive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="360dp"
                        android:layout_height="160dp"
                        android:background="@drawable/addexpences_" />
                    <View
                        android:layout_width="360dp"
                        android:layout_height="160dp"
                        android:background="#8D1A2E38"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="130dp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold|italic"
                    android:text="Add Expense"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/search_expense"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                >
                <RelativeLayout
                    android:id="@+id/view_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="360dp"
                        android:layout_height="160dp"
                        android:background="@drawable/searchexpences_" />
                    <View
                        android:layout_width="360dp"
                        android:layout_height="160dp"
                        android:background="#8D1A2E38"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/search_expence_id_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="130dp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold|italic"
                    android:text="Search Expense"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view_assign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_delivery_dp2_done_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?selectableItemBackground"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    card_view_assign:cardCornerRadius="5dp"
    card_view_assign:cardBackgroundColor="#fff"
    card_view_assign:cardElevation="3dp"
    card_view_assign:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">


        <TextView
            android:id="@+id/sla_deliverytime"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_cercleshape"
            android:elevation="4dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/sup_ordertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:maxLines="1"
            android:text="Order ID: "
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sup_orderId_dp2done"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sup_ordertxt"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/sup_ordertxt"
            android:lines="1"
            android:maxLines="1"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sup_merchant_ref_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="33dp"
            android:lines="1"
            android:maxLines="1"
            android:text="MerOrderRef: "
            android:textColor="#aaa"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/m_order_ref_dp2done"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sup_merchant_ref_txt"
            android:layout_alignEnd="@+id/divider"
            android:layout_marginStart="8dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/sup_merchant_ref_txt"
            android:lines="1"
            android:maxLines="2"
            android:textAlignment="textStart"
            android:textColor="#aaa"
            android:textSize="12sp" />

        <View
            android:id="@+id/sup_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="60dp"
            android:background="?android:attr/listDivider" />


        <TextView
            android:id="@+id/sup_merchant_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="65dp"
            android:lines="1"
            android:maxLines="1"
            android:text="Merchant: "
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sup_m_name_dp2_done"
            style="@style/boldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sup_merchant_name_txt"
            android:layout_alignEnd="@+id/divider"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/sup_merchant_name_txt"
            android:lines="1"
            android:maxLines="1"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sup_dp2_time"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="4dp"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent2"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/sup_dp2_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/colorAccent2"
            android:textSize="12sp" />


        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="125dp"
            android:background="?android:attr/listDivider" />


    <!--    <TextView
            android:id="@+id/sup_order_date"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="4dp"
            android:padding="3dp"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent2"
            android:textSize="15sp"
            android:textStyle="bold" />
-->

        <TextView
            android:id="@+id/custname"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="4dp"
            android:padding="3dp"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent2"
            android:textSize="12sp"

            android:textStyle="bold" />


        <TextView
            android:id="@+id/custAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="148dp"
            android:layout_marginEnd="4dp"
            android:padding="3dp"
            android:textColor="@color/colorAccent2"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="200dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/price_txt"
            style="@style/boldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="210dp"
            android:text="Package Price: "
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/price_dp2_done"
            style="@style/boldStyle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/price_txt"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="4dp"
            android:layout_toEndOf="@+id/price_txt"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/package_brief_dp2_done"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="6dp"
            android:lines="2"
            android:maxLines="2"
            android:textAlignment="textStart"
            android:textColor="#000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_dp2_done"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/package_brief_dp2_done"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@color/put_hd_color_green"
            android:padding="10dp"
            android:text="Assign Officer"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
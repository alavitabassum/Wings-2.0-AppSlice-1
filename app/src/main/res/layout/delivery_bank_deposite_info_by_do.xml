<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view_assign="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/card_view_delivery_bank_deposite_info_by_do"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="20dp"
android:foreground="?selectableItemBackground"
android:paddingTop="50dp"
android:paddingBottom="50dp"
card_view_assign:cardBackgroundColor="#fff"
card_view_assign:cardElevation="3dp"
card_view_assign:contentPadding="4dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/serialNo_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:maxLines="1"
        android:text="Serial No:"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/serialNo_id_text"
        style="@style/boldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/serialNo_id"
        android:layout_toEndOf="@+id/serialNo_id"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:background="?android:attr/listDivider" />


    <TextView
        android:id="@+id/total_cash_amount"
        style="@style/boldStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:lines="1"
        android:maxLines="1"
        android:paddingTop="12dp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textColorLink="@color/green"
        android:textStyle="bold"
        android:textSize="20dp" />


    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="90dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/bank_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider1"
        android:lines="1"
        android:maxLines="1"
        android:text="Date and Time:"
        android:textAlignment="textStart"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bank_time_text"
        style="@style/boldStyle"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bank_time"
        android:layout_toEndOf="@+id/bank_time"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="#1E88E5"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/comment_by_supervisor_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:lines="13"
        android:maxLines="15"
        android:text="নির্দেশণা :\n\t1. Serial No-এর উপর ক্লিক করে অর্ডার গুলো দেখে নেই.
        \n\t2. এই Serial No-এর অর্ডার গুলোর টাকা এক বা একাধিক ব্যাংকে জমা করা হয়ে থাকলে Bank Deposite Slip এ ক্লিক পরের পেজ এ যাবো.
        \n\t3. এই Serial No-এর অর্ডারগুলোর মোট টাকা কত তারিখে, কোন ব্যাংকে, স্লিপ নম্বর, টাকার পরিমাণ এবং স্লিপ এর ১ টি ছবি সহ ব্যাঙ্ক ডিপোজিট করা হয়েছে তার রেকর্ড এক এ এক এ দিয়ে Bank Depostie চাপ দিয়ে Submit করে দিবো."
        android:textAlignment="textStart"
        android:textColor="#5E35B1"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/comment_by_supervisor"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/comment_by_supervisor_id"
        android:layout_toEndOf="@+id/comment_by_supervisor_id"
        android:lines="2"
        android:maxLines="2"
        android:textAlignment="textStart"
        android:textColor="#5E35B1"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_bank_info_add"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/comment_by_supervisor_id"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonstyle_done"
        android:padding="10dp"
        android:text="Bank Deposite Slip"
        android:textColor="@color/white"
        android:visibility="visible"
        android:textSize="15sp" />

</RelativeLayout>

</android.support.v7.widget.CardView>
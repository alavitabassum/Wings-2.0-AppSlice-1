<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.paperflyv0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />


    <application
        android:name=".CustomFontApp"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/wings_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PickupsToday_Manager"
            android:label="@string/title_activity_pickups_today__manager"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AssignPickup_Manager"
            android:label="@string/title_activity_assign_pickup__manager"
            android:theme="@style/AppTheme">

        </activity>
        <receiver android:name=".NetworkStateChecker">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <activity
            android:name=".PickupHistory_Manager"
            android:label="@string/title_activity_pickup_history__manager"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ExecutiveCardMenu"
            android:label="@string/title_activity_executive_card_menu"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ManagerCardMenu"
            android:label="@string/title_activity_manager_card_menu"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PickupsToday_Executive"
            android:label="@string/title_activity_pickups_today__executive"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PickupStatus_Executive"
            android:label="@string/title_activity_pickup_status__executive"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".MyPickupList_Executive"
            android:label="@string/title_activity_my_pickups__executive"
            android:theme="@style/AppTheme">

        </activity>
        <activity android:name=".ScanningScreen">

        </activity>
        <activity android:name=".UpdateAssigns" />
        <activity android:name=".NewOrder" />
        <activity android:name=".ViewAssigns"></activity>

    </application>

</manifest>
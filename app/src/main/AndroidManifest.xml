<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.paperflywings.user.paperflyv0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".CustomFontApp"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/wings_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PickupsToday_Manager"
            android:label="@string/title_activity_pickups_today__manager"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AssignPickup_Manager"
            android:label="@string/title_activity_assign_pickup__manager"
            android:theme="@style/AppTheme" />

        <receiver android:name=".NetworkStateChecker">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".PickupHistory_Manager"
            android:label="@string/title_activity_pickup_history__manager"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ExecutiveCardMenu"
            android:label="@string/title_activity_executive_card_menu"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ManagerCardMenu"
            android:label="@string/title_activity_manager_card_menu"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PickupsToday_Executive"
            android:label="@string/title_activity_pickups_today__executive"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PickupStatus_Executive"
            android:label="@string/title_activity_pickup_status__executive"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MyPickupList_Executive"
            android:label="@string/title_activity_my_pickups__executive"
            android:supportsRtl="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ScanningScreen"
            android:parentActivityName=".MyPickupList_Executive"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.paperflywings.user.paperflyv0.MyPickupList_Executive" />
        </activity>
        <activity
            android:name=".FulfillmentScanningScreen"
            android:parentActivityName=".MyPickupList_Executive"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.paperflywings.user.paperflyv0.MyPickupList_Executive" />
        </activity>
        <activity
            android:name=".FulfillmentScanningScreenAjkerDeal"
            android:parentActivityName=".MyPickupList_Executive"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.paperflywings.user.paperflyv0.MyPickupList_Executive" />
        </activity>
        <activity
            android:name=".RobishopScanningScreen"
            android:parentActivityName=".MyPickupList_Executive"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.paperflywings.user.paperflyv0.MyPickupList_Executive" />
        </activity>
        <activity android:name=".UpdateAssigns" />
        <activity android:name=".NewOrder" />
        <activity android:name=".ViewAssigns" />
        <activity
            android:name=".Fulfillment_Assign_pickup_Manager"
            android:label="@string/title_activity_testing_fulfillment"
            android:theme="@style/AppTheme" />
        <activity android:name=".NewOrderEntry_ful" />
        <activity
            android:name=".AjkerDeal_Assign_Pickup_manager"
            android:label="@string/title_activity_ajker_deal__assign__pickup_manager"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AjkerDealOther_Assign_Pickup_manager"
            android:label="@string/title_activity_ajker_deal_other__assign__pickup_manager"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AjkerDealEkshop_Assign_Pickup_manager"
            android:label="@string/title_activity_ajker_deal_ekshop__assign__pickup_manager"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Robishop_Assign_pickup_manager"
            android:label="@string/title_activity_robishop__assign_pickup_manager"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.paperflyv0">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/wings_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PickupsToday_Manager"
            android:label="@string/title_activity_pickups_today__manager"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AssignPickup_Manager"
            android:label="@string/title_activity_assign_pickup__manager"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PickupHistory_Manager"
            android:label="@string/title_activity_pickup_history__manager"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ExecutiveCardMenu"
            android:label="@string/title_activity_executive_card_menu"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ManagerCardMenu"
            android:label="@string/title_activity_manager_card_menu"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PickupsToday_Executive"
            android:label="@string/title_activity_pickups_today__executive"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PickupStatus_Executive"
            android:label="@string/title_activity_pickup_status__executive"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MyPickupList_Executive"
            android:label="@string/title_activity_my_pickups__executive"
            android:theme="@style/AppTheme" />
        <activity android:name=".ScanningScreen"></activity>
    </application>

</manifest>